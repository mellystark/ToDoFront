@model IEnumerable<ToDoFront.Models.TodoItemModel>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Todo List</title>
    <style>
        body {
            background-color: #f8f9fa;
            padding: 20px;
        }

        .table-container {
            margin-top: 50px;
        }

        .table thead th {
            background-color: #007bff;
            color: #fff;
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f2f2f2;
        }

        .table tbody tr:nth-child(even) {
            background-color: #ffffff;
        }

        .table td {
            vertical-align: middle;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }

        .add-todo-button {
            position: absolute;
            top: 20px;
            right: 20px;
        }

        .logout-button {
            position: absolute;
            top: 20px;
            left: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logout-button">
            <button class="btn btn-danger" onclick="handleLogout()">Logout</button>
        </div>
        <h1>Todo List</h1>
        <div class="add-todo-button">
            <a href="@Url.Action("Create", "Todo")" class="btn btn-success">Todo Ekle</a>
        </div>
        <div class="table-container">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Todo Name</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var todo in Model)
                    {
                        <tr>
                            <td>@todo.Name</td>
                            <td>@(todo.IsComplete ? "Completed" : "Incomplete")</td>
                            <td>
                                <!-- Düzenleme butonu -->
                                <a href="@Url.Action("Edit", "Todo", new { id = todo.Id })" class="btn btn-primary btn-sm">Edit</a>

                                <!-- Silme butonu -->
                                <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirmDelete()">
                                    <input type="hidden" name="id" value="@todo.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        function handleLogout() {
            if (confirm("Çıkış yapmak istediğinizden emin misiniz?")) {
                // Logout işlemi sonrasında Home sayfasına yönlendirin
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }

        function confirmDelete() {
            return confirm("Bu todo öğesini silmek istediğinizden emin misiniz?");
        }
    </script>
</body>
</html>
